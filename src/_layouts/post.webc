---
layout: base.webc
---

<main>
	<header>
		<h1 @text="$data.title"></h1>
		<span @text="$data.date.toString()"></span>
	</header>
	<section class="post-content" @raw="content"></section>
	<footer>
		<div>
			<p>Â© 2025 Moamen Hredeen | Full-Stack Developer</p>
			<ul class="links">
				<li><a href="/">home</a></li>
				<li><a href="/about">about</a></li>
				<li><a href="/blog">blog</a></li>
			</ul>
		</div>
		<div class="icon">
			<a class="github" href="https:/github.com/moamenhredeen" @raw="svg('github')"></a>
			<a class="linkedin" href="https:/linkedin.com/in/moamen-hraden" @raw="svg('linkedin')"></a>
			<a class="rss" href="#" @raw="svg('rss')"></a>
		</div>
	</footer>
</main>

<style>
    main {
        width: 35%;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.8;
    }

    header {
        padding: 1rem 0;
        border-bottom: 1px solid lightgray;

        h1 {
            font-size: clamp(2rem, 6cqi, 3rem);
            font-weight: 700;
            margin-bottom: 0;
        }
    }

    h1, h2, h3 {
        color: var(--primary)
    }

    table {
		margin: 2em auto;
		min-width: 50%;
        border-collapse: collapse;
        box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.4);

        thead {
            background-color: var(--secondary);
            color: var(--primary);
            text-align: left;
        }

        th,
        td {
            padding: 0.5rem;
        }

        tbody tr:nth-child(even) {
            background-color: var(--light);
        }
    }

    pre {
        padding: 16px;
        font-size: 1rem;
        line-height: 1.5;
        white-space: pre-wrap;       /* Since CSS 2.1 */
        white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
        white-space: -pre-wrap;      /* Opera 4-6 */
        white-space: -o-pre-wrap;    /* Opera 7 */
        word-wrap: break-word;       /* Internet Explorer 5.5+ */
    }


    a {
        color: inherit;
    }

    footer {
        margin-top: 2rem;
        padding: 1rem 0;
        border-top: 1px solid lightgray;
        display: flex;
        align-items: center;
        justify-content: space-between;

		.links{
			list-style: none;
			padding: 0;
			display: flex;
			gap: 1em;
			a{
				color: var(--secondary);
			}
		}

        .icon {
            display: flex;
            align-items: center;
            gap: 2rem;

            svg {
                height: 32px;
                width: 32px;
            }

        }
    }

	@container wrapper (min-width: 0) {
		main{
			width: 90%;
		}
	}

	@container wrapper (min-width: 576px) {
		main{
			width: 80%;
		}
	}

	@container wrapper (min-width: 768px) {
		main{
			width: 75%;
		}
	}

	@container wrapper (min-width: 992px) {
		main{
			width: 60%;
		}
	}


	@container wrapper (min-width: 1200px) {
		main{
			width: 50%;
		}
	}


	@container wrapper (min-width: 1400px) {
		main{
			width: 35%;
		}
	}
</style>
