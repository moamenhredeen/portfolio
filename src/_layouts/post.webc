    pre {
        background: var(--bg-lighter);
        border: 4px solid var(--bg-light);
        padding: 1em;
        margin: 1em 0;
        overflow-x: auto;
    }

    blockquote {
        border-left: 2px solid var(--bg-medium);
        padding-left: 1em;
        font-style: italic;
        margin: 1em 0;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        border: 4px solid var(--bg-light);

        thead {
            background-color: var(--secondary);
            color: var(--primary);
            text-align: left;
        }
        
        th, td {
            padding: .2em;
        }

        tbody tr:nth-child(even) {
            background-color: var(--bg-lighter);
        }
    }

    img {
        max-width: 100%;
    }
    
    a{
        color: var(--primary);
    }

		.markdown-alert {
			margin: 1em 0;
