---
layout: base
---

<div class="post">
    <div class="post-heading">
        <h1 class="title" @text="title" :style="`view-transition-name: ${slugify(title)};`"></h1>
        <span class="date" @text="`ðŸ—“ ${page.date.toUTCString()}`"></span>
        <p class="description" @text="description" :style="`view-transition-name: ${slugify(title)}-description`"></p>
        <ul class="tags">
            <li class="tag" webc:for="tag of tags.filter(el => el !== 'post')">
                <a :href="`/tags/${tag.toLowerCase()}`"  @text="tag" :style="`view-transition-name: ${tag}`"></a>
            </li>
        </ul>
    </div>
    <div class="post-content" @raw="content"></div>
</div>


<script webc:keep src="https://utteranc.es/client.js"
        repo="moamenhredeen/portfolio"
        issue-term="pathname"
        label="comment"
        theme="github-light"
        crossorigin="anonymous"
        async>
</script>


<style>

.post {
    .post-heading{
        border-bottom: 2px dashed var(--bg-medium);
        .title{ 
            color: var(--primary);
            font-size: 3em;
        }
        .date{
            display: block;
            color: var(--text-light)
        }
        .tags {
            display: flex;
            list-style: none;
            padding-left: 0;
            gap: 1em;
            flex-wrap: wrap;
            .tag{
                background: var(--bg-light);
                border-radius: .2em;
                padding: .1em .4em;
            }
        }
    }
    
    
    max-width: 800px;
    font-weight: 300;
    line-height: 1.4;
    
    h1, h2, h3, h4, h5, h6 {  color: var(--primary) }
